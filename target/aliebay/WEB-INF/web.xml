<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.epam.aliebay.controller.FrontController</servlet-class>
    <multipart-config>
      <max-file-size>5242880</max-file-size>
      <max-request-size>5242880</max-request-size>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/main/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>LanguateFilter</filter-name>
    <filter-class>com.epam.aliebay.filter.LanguageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LanguateFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.epam.aliebay.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>defaultEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CheckAuthenticationFilter</filter-name>
    <filter-class>com.epam.aliebay.filter.CheckAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckAuthenticationFilter</filter-name>
    <url-pattern>/main/account</url-pattern>
    <url-pattern>/main/checkout</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AutoRestoreShoppingCartFilter</filter-name>
    <filter-class>com.epam.aliebay.filter.AutoRestoreShoppingCartFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AutoRestoreShoppingCartFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoadCategoriesAndProducersFilter</filter-name>
    <filter-class>com.epam.aliebay.filter.LoadCategoriesAndProducersFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoadCategoriesAndProducersFilter</filter-name>
    <url-pattern>/main/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>DefineHostFilter</filter-name>
    <filter-class>com.epam.aliebay.filter.DefineHostFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DefineHostFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.epam.aliebay.listener.ApplicationListener</listener-class>
  </listener>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/JSP/error/error-404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/JSP/error/error-500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/JSP/error/error-500.jsp</location>
  </error-page>
</web-app>